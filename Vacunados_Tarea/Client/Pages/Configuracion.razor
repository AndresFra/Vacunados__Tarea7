@page "/Configuracion"

@using Vacunados_Tarea.Shared
@inject NavigationManager NavigationManager
@inject HttpClient http

<h1 class="text-center">Configuracion</h1>
<p>
    <a class="btn btn-dark" href="/AddVacunados">Agregar Vacuna</a>
</p>
@if (vacuList == null)
{
    <p>Cargando...</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Marca</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vac in vacuList)
            {
                <tr>
                    <td>@vac.marca</td>
                    <td>@vac.cantidad</td>
                    <td>
                        
                        <a class="btn btn-danger" href="/DeleteVacunas/@vac.id">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}






@code {
    Vacunas[] vacuList;
    protected override async Task OnInitializedAsync()
    {
        await loadData();
    }

    protected async Task loadData()
    {
        vacuList = await http.GetJsonAsync<Vacunas[]>("https://localhost:44313/api/Vacunas");
        
    }
}
