@page "/AddVacunados"

@using Vacunados_Tarea.Shared
@inject NavigationManager NavigationManager
@inject HttpClient http

<h3>Agregar Vacunados</h3>
<hr />
<form>
    <div class="row">
        <div class="form-group">
            <label for="marca" class="control-label">Marca</label>
            <input for="marca" class="form-control" @bind="@vac.marca" />
        </div>


        <div class="form-group">
            <label for="cantidad" class="control-label">Cantidad</label>
            <input for="cantidad" class="form-control" @bind="@vac.cantidad" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-control">
                <input type="button" class="btn btn-primary" @onclick="CreateVacuna" value="Guardar" />
                <hr />
                <input type="button" class="btn" @onclick="cancel" value="cancelar" />
            </div>

        </div>

    </div>
</form>




@code {
    Vacunas vac = new Vacunas();
    protected async Task CreateVacuna()
    {
        await http.PostJsonAsync("https://localhost:44313/api/Vacunas", vac);
        NavigationManager.NavigateTo("Configuracion");
    }

    void cancel()
    {
        NavigationManager.NavigateTo("Configuracion");
    }
}
